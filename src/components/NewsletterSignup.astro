---
const {
  title = "Follow the ongoing exploration",
  subtitle = "Occasional notes about mathematics, AI, and ideas I'm currently thinking about.",
  buttonText = "Subscribe",
  placeholder = "you@example.com",
  // Replace this with your provider form action URL
  actionUrl = "https://buttondown.email/api/emails/embed-subscribe/alteredchain",
} = Astro.props;
---

<section class="newsletter-wrap" aria-label="Newsletter signup">
  <div class="newsletter">
    <div class="newsletter-inner">
      <div class="copy">
        <h3>{title}</h3>
        <p>{subtitle}</p>
      </div>

      <form
        class="form"
        method="post"
        action={actionUrl}
      >
        <label class="sr-only" for="email">Email</label>
        <input
          id="email"
          name="email"
          type="email"
          required
          autocomplete="email"
          placeholder={placeholder}
        />

        <input type="hidden" name="success_url" value="https://www.alteredchain.com/subscribed" />

        <input class="hp" type="text" name="company" tabindex="-1" autocomplete="off" />

        <button type="submit">{buttonText}</button>
      </form>
    </div>
  </div>
</section>


<style>
/* Keep the newsletter aligned with your article width */
.newsletter-wrap{
  margin: 2.25rem auto;
  width: min(900px, calc(100% - 2rem)); /* max 900px + gutters */
}

.newsletter{
  width: 100%;
  box-sizing: border-box;
  padding: 1.1rem;
  border: 1px solid rgba(255,255,255,0.12);
  border-radius: 14px;
  background: rgba(255,255,255,0.03);
}

.newsletter-inner{
  display: grid;
  grid-template-columns: 1fr auto;
  gap: 1.25rem;
  align-items: center;
}

/* Form layout */
.newsletter .form{
  display: flex;
  gap: .6rem;
  align-items: center;
}

/* IMPORTANT: hide the honeypot field (this was showing as the 2nd box) */
.newsletter input.hp{
  display: none !important;
}

.newsletter .form input[type="email"]{
  /* override global “prose input” styles */
  display: block !important;
  width: 100% !important;

  height: 44px !important;
  min-height: 44px !important;
  max-height: 44px !important;

  padding: 0 .9rem !important;
  margin: 0 !important;

  font-size: 16px !important;       /* iOS zoom fix */
  line-height: 44px !important;     /* keeps text vertically centered */

  border-radius: 12px !important;
  border: 1px solid rgba(0,0,0,0.25) !important;
  background: rgba(0,0,0,0.06) !important;

  box-sizing: border-box !important;
  box-shadow: none !important;
  outline: none;
}


.newsletter .form input[type="email"]:focus{
  border-color: rgba(0,0,0,0.45);
}

.newsletter .form button{
  all: unset;
  box-sizing: border-box;
  display: inline-flex;
  align-items: center;
  justify-content: center;

  height: 44px;
  padding: 0 1rem;

  border-radius: 12px;
  border: 1px solid rgba(0,0,0,0.25);
  background: rgba(0,0,0,0.04);
  cursor: pointer;
  white-space: nowrap;
}
.newsletter .form button:hover{
  background: rgba(0,0,0,0.07);
}


/* Responsive */
@media (max-width: 700px){
  .newsletter-inner{
    grid-template-columns: 1fr;
    gap: 0.9rem;
  }
}

@media (max-width: 520px){
  .newsletter .form{
    flex-direction: column;
    align-items: stretch;
  }
  .newsletter .form button{
    width: 100%;
  }
}



</style>
