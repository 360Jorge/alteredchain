---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const {
  title = "Altered Chain",
  description = "",
  sectionTitle = "",
  backHref = "",
  backLabel = "Back",
} = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead {title} {description} />
  </head>
  <body>
    <Header />

    <main class="site-main">
      <article class="prose research">
        {sectionTitle && (
          <div class="research-head">
            <p class="research-kicker">{sectionTitle}</p>
          </div>
        )}

        <h1 class="research-title">{title}</h1>

        <slot />

        {backHref && (
          <nav class="research-footer-nav">
            <a class="research-back-bottom" href={backHref}>
              ← Back to {backLabel}
            </a>
          </nav>
        )}
      </article>
    </main>

    <Footer />
  </body>
</html>

<style>
  

  .research-head {
    margin-top: 1.25rem;
    margin-bottom: 0.75rem;
  }

  .research-kicker {
    margin: 0 0 0.35rem 0;
    font-size: 0.75rem;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    opacity: 0.7;
  }

  .research-title {
    font-size: clamp(2.1rem, 7vw, 3.4rem);
    line-height: 1.05;
    letter-spacing: -0.02em;
    margin: 0 0 1.75rem 0;
    overflow-wrap: break-word;
    hyphens: auto;
  }

  .research :global(h2:first-of-type) {
    margin-top: 1.25rem;
  }

  .research-footer-nav {
    margin-top: 2.5rem;
    padding-top: 1.25rem;
    border-top: 1px solid rgba(0, 0, 0, 0.08);
  }

  .research-back-bottom {
    display: inline-block;
    font-size: 0.95rem;
    text-decoration: none;
    opacity: 0.85;
  }
  .research-back-bottom:hover {
    opacity: 1;
    text-decoration: underline;
  }

  /* Prevent overflow without “cutting” content */
  .research :global(p),
  .research :global(li),
  .research :global(a) {
    overflow-wrap: anywhere;
    word-break: break-word;
  }

  .research :global(img),
  .research :global(video),
  .research :global(svg),
  .research :global(canvas) {
    max-width: 100%;
    height: auto;
  }

  .research :global(pre),
  .research :global(code) {
    max-width: 100%;
    overflow-x: auto;
  }

  .research :global(.katex-display),
  .research :global(.MathJax_Display),
  .research :global(.mjx-container[display="true"]) {
    max-width: 100%;
    overflow-x: auto;
    overflow-y: hidden;
    padding-bottom: 0.25rem;
  }
</style>
